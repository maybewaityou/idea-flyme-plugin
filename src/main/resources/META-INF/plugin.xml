<idea-plugin>
    <id>online.zero2hero.flyme</id>
    <name>Flyme</name>
    <vendor email="maybewaityou@gmail.com">Zero2Hero</vendor>

    <description>
        <![CDATA[Flyme toolchain. Dart & Flutter snippet, please <a href="https://github.com/georgeherby/flutter-snippets/blob/master/README.md">visit here</a>]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <defaultLiveTemplatesProvider implementation="snippet.FlutterTemplateProvider"/>
        <liveTemplateContext implementation="snippet.FlutterContext"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="flyme" class="action.ActionGroup" text="Flyme" popup="true" icon="AllIcons.Actions.GroupBy">
            <add-to-group group-id="NavBarToolBar" anchor="first"/>
            <separator/>
            <action id="create_use_case_action" class="action.CreateUseCaseAction" text="Generate UseCase">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <action id="create_page_action" class="action.CreatePageAction" text="Generate Page">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <action id="create_feature_action" class="action.CreateFeatureAction" text="Generate Feature">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <action id="create_native_plugin_action" class="action.CreateNativePluginAction"
                    text="Generate Native Plugin">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <separator/>
            <action id="create_package_action" class="action.CreatePackageAction" text="Generate Package">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <action id="create_project_action" class="action.CreateProjectAction" text="Generate Project">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <separator/>
        </group>
    </actions>
</idea-plugin>