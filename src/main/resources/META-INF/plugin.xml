<idea-plugin>
    <id>online.zero2hero.flyme</id>
    <name>Flyme</name>
    <vendor email="maybewaityou@gmail.com">Zero2Hero</vendor>

    <description><![CDATA[Dart & Flutter snippet. Flyme toolchain.]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <defaultLiveTemplatesProvider implementation="snippet.FlutterTemplateProvider"/>
        <liveTemplateContext implementation="snippet.FlutterContext"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="flyme" class="action.ActionGroup" icon="AllIcons.Actions.Forward">
            <add-to-group group-id="NavBarToolBar" anchor="first"/>
            <action id="create_use_case_action" class="action.CreateUseCaseAction" text="create a new use case">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <action id="create_page_action" class="action.CreatePageAction" text="create a new page">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <action id="create_feature_action" class="action.CreateFeatureAction" text="create a new feature">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <action id="create_native_plugin_action" class="action.CreateNativePluginAction"
                    text="create a new native plugin">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <action id="create_package_action" class="action.CreatePackageAction" text="create a new package">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <action id="create_project_action" class="action.CreateProjectAction" text="create a new project">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
        </group>
    </actions>
</idea-plugin>